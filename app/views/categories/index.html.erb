<div class="mx-auto md:w-2/3 w-full">
  <% if notice.present? %>
    <div class="bg-green-900/50 backdrop-blur-sm border border-green-500/20 p-4 rounded-lg mb-6">
      <p class="text-green-400"><%= notice %></p>
    </div>
  <% end %>

  <% content_for :title, "Categories" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-pink-400">Categories</h1>
    <%= link_to new_category_path, class: "px-6 py-3 rounded-lg bg-gradient-to-r from-green-600 to-green-700 hover:from-green-500 hover:to-green-600 text-white font-medium shadow-lg shadow-green-500/30 hover:shadow-green-500/50 transition-all duration-200 inline-flex items-center" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      New Category
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% @categories.each do |category| %>
      <div class="bg-gray-800 rounded-xl shadow-lg border border-pink-700 p-6 hover:border-pink-500 transition-colors duration-200">
        <div class="flex justify-between items-start mb-4">
          <h2 class="text-xl font-bold text-pink-400"><%= category.name %></h2>
          <div class="flex space-x-2">
            <%= link_to edit_category_path(category), class: "p-2 rounded-lg bg-gray-900/50 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            <% end %>
            <%= button_to category_path(category), method: :delete, class: "p-2 rounded-lg bg-gray-900/50 text-red-400 hover:bg-red-900/20 hover:text-red-300 transition-colors duration-200", form: { data: { turbo_confirm: "Are you sure?" } } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          </div>
        </div>

        <% if category.description.present? %>
          <p class="text-gray-300 mb-4 line-clamp-2"><%= category.description %></p>
        <% end %>

        <div class="bg-gray-900/50 rounded-lg p-4">
          <div class="text-xl font-bold text-green-400">
            <%= category.expenses.count %> expenses
          </div>
          <p class="text-gray-400 text-sm mt-1">
            Total: <%= number_to_currency(category.expenses.sum(:amount)) %>
          </p>
        </div>

        <%= link_to category_path(category), class: "mt-4 inline-flex items-center text-sm text-pink-400 hover:text-pink-300" do %>
          View Details
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
