<div class="max-w-2xl mx-auto bg-gray-800 rounded-xl shadow-lg border border-pink-700 p-8">
  <%= form_with(model: category, class: "space-y-6") do |form| %>
    <% if category.errors.any? %>
      <div class="bg-pink-900/50 backdrop-blur-sm border border-pink-500/20 rounded-lg p-4 mb-6">
        <div class="flex items-center space-x-3">
          <svg class="h-5 w-5 text-pink-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
          <h3 class="text-sm font-medium text-pink-400">Please fix the following errors:</h3>
        </div>
        <ul class="mt-3 list-disc list-inside text-sm text-pink-300 space-y-1">
          <% category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-6">
      <div class="relative">
        <%= form.label :name, class: "absolute -top-2 left-2 inline-block px-1 bg-gray-800 text-sm font-medium text-pink-400" %>
        <%= form.text_field :name, class: "mt-1 block w-full rounded-lg bg-gray-900/50 border-2 border-gray-700 text-white placeholder-gray-400 focus:border-pink-500 focus:ring focus:ring-pink-500/50 focus:ring-opacity-50 transition-colors duration-200", placeholder: "Enter category name" %>
      </div>

      <div class="relative">
        <%= form.label :description, class: "absolute -top-2 left-2 inline-block px-1 bg-gray-800 text-sm font-medium text-pink-400" %>
        <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-lg bg-gray-900/50 border-2 border-gray-700 text-white placeholder-gray-400 focus:border-green-500 focus:ring focus:ring-green-500/50 focus:ring-opacity-50 transition-colors duration-200", placeholder: "Add a description for this category..." %>
      </div>
    </div>

    <div class="flex justify-end items-center space-x-4 mt-8">
      <%= link_to categories_path, class: "px-6 py-3 rounded-lg bg-gray-900/50 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200 flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
        </svg>
        Cancel
      <% end %>
      <%= form.submit class: "px-6 py-3 rounded-lg bg-gradient-to-r from-green-600 to-green-700 hover:from-green-500 hover:to-green-600 text-white font-medium shadow-lg shadow-green-500/30 hover:shadow-green-500/50 transition-all duration-200 flex items-center" %>
    </div>
  <% end %>
</div>
